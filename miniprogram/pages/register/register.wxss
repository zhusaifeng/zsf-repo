/* pages/register/register.wxss */
page {
    width: 100%;
}

.formContainer {
    width: 90%;
    height: 200rpx;
    border-radius: 5rpx;
}

.formContainer view {
    width: 100%;
    /* height: 100rpx; */
    border-bottom: 1px solid #ccc;
    /* margin: -1rpx; */
    border-radius: 5rpx;    
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding: 0 5px;
    margin: 5px;
}

.registerBtn {
    width: 100%;
    height: 80rpx;
    background-color: var(--themeColor);
    border-radius: 5px;
    color: #fff;
    text-align: center;
    line-height: 50rpx;
    font-size: 32rpx;
    margin-top: 300rpx;
}

.usernameContainer image, .passwordContainer image {
    width: 40rpx;
    height: 40rpx;
    /* margin-top: 30rpx;
    margin-left: 30rpx; */
    /* float: left; */
    display: block;
}

.usernameContainer input, .passwordContainer input {
    /* width: 200px; */
    width: 85%;
    display: block;
    height: 100rpx;
    margin-left: 10px;
    font-size: 32rpx;
}

.navBtn {
    font-size: 32rpx;
    text-align: center;
    margin: 0 auto;
    color: #aaa;
    display: block;
    margin-top: 30px;
}

.errorMsg {
    color: #ef5350;
    font-size: 32rpx;
    margin-bottom: 5px;
}