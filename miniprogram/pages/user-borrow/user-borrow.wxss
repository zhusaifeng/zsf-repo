/* pages/user-borrow/user-borrow.wxss */

.mian-container{
    width: 100%;
}

.card {
    width: 100%;
    height:300px;
    background: #fff;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
    font-size: 14px;
    line-height: 28px;
    float: left;
    margin-bottom: 10px;
}

.card .btn {
    /*width: 400rpx;
    height: 60rpx;*/
    width: 180px;
    height: 30px;
    background: #fff;
    color: rgb(185, 227, 241);
    text-align: center;
    line-height: 30px;
    border-radius: 5px;
    margin: 0 auto;
    font-size: 14px;
    margin-top: 20px;
    border: 1px solid rgb(185, 227, 241);
    margin-bottom: 0;
}


.item {
    display: flex;
    align-items:left;
    height: 200rpx;
    width: 90%;
    border-bottom: 2rpx solid #eee;
}

.item .txt-time {
    background-color: #6EBEC7;
    color: #fff;
    border-radius: 10rpx;
    font-size: 28rpx;
    margin-top: 7px;
    font-weight: bold;
    height: 42rpx;
    width: 120rpx;
    line-height: 42rpx;
    text-align: center;
}
