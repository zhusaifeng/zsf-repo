/* pages/user/user.wxss */
.logo {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 2px solid white;
    box-shadow: 3px 3px 10px gainsboro;
    display: block;
    overflow: hidden;
    margin-top: 20px;
    margin-left: 120px;
}
.username {
    font-size: 40rpx;
    width: 100%;
    height: 20px;
    margin-top: 10px;
    text-align: center;
    color: #fff;
}
.user-container {
    width: 100%;
    height: 180px;
    background-color: rgb(185, 227, 241);
    display: flex;
    flex-direction: column;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
}
.desc {
    font-size: 30rpx;
    color: #fff;
    margin-top: 10px;
    text-align: center;
}
