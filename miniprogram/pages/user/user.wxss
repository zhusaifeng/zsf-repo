/* pages/user/user.wxss */
.logo {
    width: 80px;
    height: 80px;
    border-radius: 50%;
    border: 2px solid white;
    box-shadow: 3px 3px 10px gainsboro;
    display: block;
    overflow: hidden;
    margin-top: 20px;
    margin-left: 120px;
}
.username {
    font-size: 40rpx;
    width: 100%;
    height: 20px;
    margin-top: 10px;
    text-align: center;
    color: #fff;
}
.user-container {
    width: 100%;
    height: 180px;
    background-color: var(--themeColor);
    display: flex;
    flex-direction: column;
    box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.1);
}
.desc {
    font-size: 30rpx;
    color: #fff;
    margin-top: 10px;
    text-align: center;
}

.set-card {
    width: 100%;
    height: 50px;
    margin-top: 2px;
    background-color: #fff;
}

.set-card image {
    width: 25px;
    height: 25px;
    margin-top: 12px;
    margin-left: 15px;
    float: left;
}

.set-card .name {
    font-size: 36rpx;
    color: #000;
    line-height: 50px;
    margin-left: 10px;
    float: left;
}

.set-card .arrow {
    font-size: 36rpx;
    color: #666;
    line-height: 50px;
    float: right;
    margin-right: 15px;
}
